		"@react-email/components": "^0.0.36",
		"@react-email/render": "^1.0.6",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.41.0",
		"lucide-react": "^0.487.0",
		"next": "15.2.1",
